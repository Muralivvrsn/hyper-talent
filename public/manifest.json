{
  "manifest_version": 3,
  "name": "LinkAgent",
  "short_name": "LinkAgent",
  "version": "1.5.3",
  "description": "An ATS Chrome Extension",
  "key": "",
  "icons": {
    "16": "hypertalent.png",
    "48": "hypertalent.png",
    "128": "hypertalent.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "hypertalent.png",
      "48": "hypertalent.png",
      "128": "hypertalent.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
"content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": [
        "firebase-app.js",
        "firebase-database.js",
        "firebase-auth.js",
        "firebase-firestore.js",
        "firebase-functions-compat.js",
        "utils/alert.js",
        "utils/notification_system/style.js",
        "utils/notification_system/index.js",
        "utils/profileInfo.js",
        "database/index.js",
        "database/user_actions.js",
        "database/tags.js",
        "database/theme.js",
        "database/message_templates.js",
        "database/persionalized_notes.js",
        "utils/autoupdate.js",
        "tags/index.js",
        "tags/keyboard.js",
        "tags/observer.js",
        "tags/filter.js",
        "tags/filtering-ui.js",

        
        "services/templates/index.js",
        "services/keyboard/index.js",
        "services/notes/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "identity",
    "cookies"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "firebase-app.js",
        "firebase-database.js",
        "firebase-auth.js",
        "firebase-firestore.js",
        "firebase-functions-compat.js",
        "logo.png",
        "refresh.png"
      ],
      "matches": [
        "https://*.linkedin.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "oauth2": {
    "client_id": "940298574245-4e36k85u3iv6qppt4pp3d7rf9cloirh3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "host_permissions": [
    "https://www.linkedin.com/*",
    "*://*.googleapis.com/*",
    "*://*.firebasestorage.googleapis.com/*",
    "https://*.slack.com/*"
  ]
}