{
  "manifest_version": 3,
  "name": "HyperTalent",
  "short_name": "Hyper",
  "version": "1.0",
  "description": "An ATS Chrome Extension",
  "icons": {
    "16": "package-lock.png",
    "48": "package-lock.png",
    "128": "package-lock.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "package-lock.png",
      "48": "package-lock.png",
      "128": "package-lock.png"
    }
  },
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
 
  "permissions": ["storage", "activeTab", "scripting","sidePanel","identity","cookies"],
  "web_accessible_resources": [
    {
      "resources": ["package-lock.png", "package-lock.png", "package-lock.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "oauth2": {
    "client_id": "17747105090-t6mavvu1bcaldmkc5nurr65f5l0d5r27.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/drive"
    ],
    "redirect_uri": "https://acaahabiopgjkcdolnfhldmcaomphmpm.chromiumapp.org/oauth2"
  }
}
